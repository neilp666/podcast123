<div id="banner" class="podcast_banner">
    <h1>Discover your new favorite podcasts</h1>
  </div>

  <div id="podcasts" class="cf">
    <div class="wrapper">
      <ul>
          <% @podcasts.each do |podcast| %>
            <%= link_to podcast do %>
              <li>
                 <%= image_tag podcast.thumbnail.url(:medium) %>
                 <div class="podcast_overview">
                   <h2><%= podcast.title %></h2>
                 <p class="episode_count">1 Episode</p>
              </div> 
            </li>
            <% end %>
          <% end %>
      </ul>
  </div>
</div>

<div id="podcast_show">
    <div id="show_banner">
      <div class="wrapper_skinny">
      <h1><%= @podcast.title %></h1>
      <p class="description"><%= @podcast.description %></p>
      <% unless @podcast.itunes.blank? %>
        <a href="<%= @podcast.itunes %>" class="subscribe_link">ITunes</a>
      <% end %>
      <% unless @podcast.stitcher.blank? %>
      <a href="<%= @podcast.stitcher %>" class="subscribe_link">Sticher</a>
      <% end %>
       <% unless @podcast.podbay.blank? %>
      <a href="<%= @podcast.podbay %>" class="subscribe_link">Podbay</a>
      <% end %>
      </div>
    </div>


  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= link_to @podcast.title, podcast_path(@podcast) %>
      <span>/</span>
      <%= @episode.title %>
    <% end %>
  </div>

  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="cf">
        <% @episodes.each do |episode| %>
         <li class="cf">
          <div class="episode_thumbnail">
            <a href="#">
              <img src="https://dl.dropboxusercontent.com/s/phrqfxef0c4x69x/river1.jpg" alt="Narwhals Podcast" alt="test">
            </a>
          </div>
          <div class="episode_overview">
            <h2><%= link_to episode.title, podcast_episode_apth(@podcast, episode) %></h2>
            <p class="description"><%= truncate(episode.description, length: 160) %></p>
        
          </div>
      </li>
    <% end %>
    </ul>
  </div>
  </div>
</div>


     <%= will_paginate @episodes, previous_label: "Previous", next_label: "Next" %>
